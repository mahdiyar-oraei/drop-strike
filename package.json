{
  "name": "drop-strike-backend",
  "version": "1.0.0",
  "description": "Backend API for Drop Strike Unity Game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "seed:ads": "node scripts/seedAdRewards.js",
    "create:admin": "node scripts/createAdmin.js",
    "setup": "npm run create:admin && npm run seed:ads",
    "install:all": "npm install && cd admin-dashboard && npm install && cd ..",
    "dev:all": "concurrently \"npm run dev\" \"cd admin-dashboard && npm start\"",
    "build:admin": "cd admin-dashboard && npm run build",
    "admin": "cd admin-dashboard && npm start"
  },
  "keywords": ["unity", "game", "backend", "api", "admob", "paypal"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "geoip-lite": "^1.4.7",
    "paypal-rest-sdk": "^1.8.1",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2"
  }
}
